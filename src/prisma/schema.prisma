generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model rides {
  id Int @id @default(autoincrement())
  rideId String @unique
  captainId String?
  userId String
  pickUpLocation String?
  destination String?
  price Int?
  status rideStatus @default(pending)
}

enum rideStatus {
  pending
  accepted
  completed
  cancelled
} 